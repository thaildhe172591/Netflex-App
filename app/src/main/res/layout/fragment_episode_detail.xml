<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- GSYVideoPlayer -->
        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/video_player"
            android:layout_width="0dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/video_player"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREV"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- NEXT Button -->
        <LinearLayout
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/video_player"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <!-- Episode Info -->
        <TextView
            android:id="@+id/textEpisodeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Episode 1: A Episode Name"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btnPrev"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textEpisodeMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Release: 20/10/2003   60mins"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textEpisodeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageSeriePoster"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/textEpisodeMeta"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textSerieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A TV Serie Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/imageSeriePoster"
            app:layout_constraintStart_toEndOf="@id/imageSeriePoster"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textSerieMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="16/10/2003 - 12ep - US"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textSerieTitle"
            app:layout_constraintStart_toEndOf="@id/imageSeriePoster"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
