<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp">

    <!-- Ảnh Poster -->
    <ImageView
        android:id="@+id/imagePoster"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Unfollow bằng TextView, kiểu badge -->
    <TextView
        android:id="@+id/btnUnfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unfollow"
        android:textSize="10sp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/bg_unfollow_badge"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/imagePoster"
        app:layout_constraintEnd_toEndOf="@id/imagePoster"
        android:layout_margin="4dp" />

    <!-- Tiêu đề phim -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/imagePoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
