<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#1E1E1E">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Bell Icon -->
        <ImageView
            android:id="@+id/imgBell"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:tint="#FFCC00"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NETFLEX"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgBell"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@id/imgBell" />

        <!-- Time -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 min ago"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/imgBell" />

        <!-- Notification Title -->
        <TextView
            android:id="@+id/tvNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Title"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_below="@id/imgBell"
            android:layout_marginTop="10dp" />

        <!-- Notification Content -->
        <TextView
            android:id="@+id/tvNotificationContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details about the notification"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:layout_below="@id/tvNotificationTitle"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
